{% extends '_partials/_base.twig' %}
{% block body %}
{# Make sure we can show both listings and single records: #}
{% set records = records ?: [record] %}
<div class="flex no-margin">
    {% for record in records %}
        {# Make sure we have an image to use as background: #}
        {% set image = record.image ?: attribute(theme.images, record.id) ?: random(theme.images) %}
        <div class="{% if loop.first %}eight{% else %}four{% endif %} m-six s-twelve align center startbox full-bg" style="background-image:url({{image(image, 1920, 1080)}})">
            <h2>{{record.title}}</h2>
            <a class="button" href="{{record.link}}">Read more...</a>
        </div>
    {% endfor %}
</div>
{% endblock %}
{% block footer %}
{% endblock %}
